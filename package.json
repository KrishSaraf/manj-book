{
  "name": "manj-book",
  "version": "1.0.0",
  "description": "Nature-inspired blog website for Manjari - books, thoughts, and digital garden",
  "scripts": {
    "install-frontend": "cd frontend && npm install",
    "install-functions": "npm install",
    "install-all": "npm run install-frontend && npm run install-functions",
    "dev-frontend": "cd frontend && npm start",
    "dev-functions": "netlify dev",
    "dev": "netlify dev",
    "build": "cd frontend && npm run build",
    "start": "netlify dev",
    "deploy": "netlify deploy --prod"
  },
  "keywords": ["blog", "nature", "react", "netlify", "serverless"],
  "author": "KrishSaraf",
  "license": "MIT",
  "dependencies": {
    "express": "^4.18.2",
    "cors": "^2.8.5",
    "jsonwebtoken": "^9.0.1",
    "bcryptjs": "^2.4.3",
    "multer": "^1.4.5-lts.1",
    "serverless-http": "^3.2.0"
  },
  "devDependencies": {
    "netlify-cli": "^17.10.1"
  },
  "engines": {
    "node": ">=18.0.0"
  }
} 